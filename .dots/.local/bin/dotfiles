#!/usr/bin/env bash

function print_help() {
  echo 'Usage: dotfiles <up|down>'
  echo '  up'
  echo '    Uses gnu-stow to install the ~/.dotfiles directory to ~'
  echo '    The exact command that is run is:'
  echo '      stow -v --no-folding --dir=$HOME/.fishbowl/.dots --target=$HOME'
  echo '  down'
  echo '    Uses gnu-stow to remove any installed dotfiles defined in the ~/.dotfiles from ~'
  echo '    The exact command that is run is:'
  echo '     stow -v --delete --dir=$HOME/.fishbowl/.dots --target=$HOME'
}

if [ "$1" = "up" ]; then
  stow -v --no-folding --dir=$HOME/.fishbowl/.dots --target=$HOME .
  exit 0
elif [ "$1" = "down" ]; then
  stow -v --delete --dir=$HOME/.fishbowl/.dots --target=$HOME .
  exit 0
else
  print_help
  exit 1
fi
